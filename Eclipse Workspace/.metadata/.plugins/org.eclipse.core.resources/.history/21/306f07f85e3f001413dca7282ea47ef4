
public class FORMATTING_patterns {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		double dec = 5.3423;
		System.out.println(String.format("%.3c",dec));
		System.out.println(String.format("%12.3c",dec));
		System.out.println(String.format("%-7.3c",dec));

	}

}
